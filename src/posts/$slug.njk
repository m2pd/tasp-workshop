---
pagination:
    data: posts
    size: 1
    alias: post
permalink: "/posts/{{ post.title | slugify }}/"
eleventyComputed:
  title: "{{ post.title }}"
layout: layout.njk
---

<div class="max-w-7xl mx-auto mt-6 px-4 ">
  <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{{ title }}</h1>
  <p class="mt-4 text-gray-500">{{ post.body }}</p>
</div>